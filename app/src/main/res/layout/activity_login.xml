<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

  <AutoCompleteTextView
      android:id="@+id/username"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="请输入账号"
      android:layout_marginTop="@dimen/spacing_144"
      android:layout_marginLeft="@dimen/spacing_32"
      android:layout_marginRight="@dimen/spacing_32"
      />

    <AutoCompleteTextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:layout_marginTop="@dimen/spacing_40"
        android:layout_marginLeft="@dimen/spacing_32"
        android:layout_marginRight="@dimen/spacing_32"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_40"
        >
        <TextView
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="登录"
            android:layout_marginLeft="@dimen/spacing_48"
            android:textSize="@dimen/font_larger"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_marginRight="@dimen/spacing_48"
            android:textSize="@dimen/font_larger"
            android:layout_weight="1"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>